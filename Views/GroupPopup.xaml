<Window x:Class="TaskbarGrouper.Views.GroupPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Group Popup" Height="Auto" Width="350" 
    WindowStyle="None" 
    ResizeMode="NoResize" 
    Topmost="True"
    AllowsTransparency="True"
    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
    SizeToContent="Height"
    Icon="pack://application:,,,/Resources/appiconLight.ico">
    <Window.Resources>
    <DropShadowEffect x:Key="DropShadowEffect" 
              Color="Black" 
              BlurRadius="15" 
              ShadowDepth="5" 
              Opacity="0.3"/>
        <Style x:Key="ModernButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                <!-- Keep text color unchanged on hover -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" 
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" 
            BorderThickness="1" 
            CornerRadius="8"
            Effect="{StaticResource DropShadowEffect}">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>   <!-- Categories (scrollable) -->
                <RowDefinition Height="Auto"/> <!-- Expander at bottom -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                Background="{Binding Background, RelativeSource={RelativeSource AncestorType=Window}}"
                CornerRadius="4,4,0,0"
                Margin="-8,-8,-8,8"
                Padding="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Open Windows"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="12,8,0,8"/>
                    <Button x:Name="AddFileButton"
                        Grid.Column="1"
                        Width="24" Height="24"
                        Margin="0,6,6,0"
                        Padding="0"
                        Background="#FFF0F0F0"
                        BorderBrush="#FFD0D0D0"
                        BorderThickness="1"
                        Foreground="{DynamicResource AccentColor}"
                        FontWeight="Bold"
                        FontSize="18"
                        Content="+"
                        ToolTip="Add File"
                        Cursor="Hand"
                        Click="AddFileButton_Click"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{x:Null}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="12">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFE0E0E0"/>
                                                    <Setter Property="Foreground" Value="#FF222222"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#FFD0D0D0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="CloseButton"
                            Grid.Column="2"
                            Width="24" Height="24"
                            Margin="0,6,6,6"
                            Padding="0"
                            Background="#FFF0F0F0"
                            BorderBrush="#FFD0D0D0"
                            BorderThickness="1"
                            Foreground="#FF888888"
                            FontWeight="Bold"
                            FontSize="14"
                            Content="âœ•"
                            ToolTip="Close"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{x:Null}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="12">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFE0E0E0"/>
                                                    <Setter Property="Foreground" Value="#FF222222"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#FFD0D0D0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Categories (scrollable) with Add Category button at the bottom -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="300">
                <StackPanel x:Name="CategoriesPanel" Orientation="Vertical">
                    <!-- Categories will be rendered here dynamically -->
                </StackPanel>
            </ScrollViewer>

            <!-- Expander for open windows at the bottom -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,16,0,0">
                <Expander Header="Open Windows" IsExpanded="False" Margin="0,0,0,0">
                    <StackPanel x:Name="AppListPanel" Orientation="Vertical"/>
                </Expander>
            </StackPanel>
        </Grid>
    </Border>
</Window>