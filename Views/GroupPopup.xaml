<Window x:Class="TaskbarGrouper.Views.GroupPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group Popup" Height="Auto" Width="350" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="Height">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" 
                          Color="Black" 
                          BlurRadius="15" 
                          ShadowDepth="5" 
                          Opacity="0.3"/>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE0E0E0"/>
                                <!-- Keep text color unchanged on hover -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" 
            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" 
            BorderThickness="1" 
            CornerRadius="8"
            Effect="{StaticResource DropShadowEffect}">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" 
                    CornerRadius="4,4,0,0" 
                    Margin="-8,-8,-8,8"
                    Padding="12,8">
                <TextBlock Text="Open Windows" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
            </Border>
            
                <!-- Header with Close Button -->
                <Border Grid.Row="0"
                        Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"
                        CornerRadius="4,4,0,0"
                        Margin="-8,-8,-8,8"
                        Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Open Windows"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"
                                   VerticalAlignment="Center"
                                   Margin="12,8,0,8"/>
                        <Button x:Name="AddFileButton"
                                Grid.Column="1"
                                Width="24" Height="24"
                                Margin="0,6,6,0"
                                Padding="0"
                                Background="#FFF0F0F0"
                                BorderBrush="#FFD0D0D0"
                                BorderThickness="1"
                                Foreground="#FF888888"
                                FontWeight="Bold"
                                FontSize="16"
                                Content="+"
                                ToolTip="Add File"
                                Cursor="Hand"
                                Click="AddFileButton_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{x:Null}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                                        <Setter Property="Foreground" Value="#FF222222"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#FFD0D0D0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="CloseButton"
                                Grid.Column="2"
                                Width="24" Height="24"
                                Margin="0,6,6,6"
                                Padding="0"
                                Background="#FFF0F0F0"
                                BorderBrush="#FFD0D0D0"
                                BorderThickness="1"
                                Foreground="#FF888888"
                                FontWeight="Bold"
                                FontSize="14"
                                Content="âœ•"
                                ToolTip="Close"
                                Cursor="Hand"
                                Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{x:Null}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                                        <Setter Property="Foreground" Value="#FF222222"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#FFD0D0D0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            
            <!-- Window List and File List -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="300">
                <StackPanel Orientation="Vertical">
                    <StackPanel x:Name="FileListPanel" Orientation="Vertical" AllowDrop="True" Drop="FileListPanel_Drop" DragOver="FileListPanel_DragOver"/>
                    <Separator Margin="0,8,0,8"/>
                    <Expander Header="Open Windows" IsExpanded="False" Margin="0,0,0,0">
                        <StackPanel x:Name="AppListPanel" Orientation="Vertical"/>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>